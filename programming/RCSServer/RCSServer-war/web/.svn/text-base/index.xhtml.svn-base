<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:p="http://primefaces.org/ui"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:f="http://java.sun.com/jsf/core">
    <f:view id="root">
        <h:head id="head">
            <title>Room Control System</title>

            <link rel="stylesheet" href="css/style.css" type="text/css" />öö

            <script type="text/javascript" src="js/fan/rotateLibrary.js"></script>
            <script type="text/javascript" src="js/fan/fan.js"></script>
            <script type="text/javascript" src="js/rollerblind/rollerblind.js"></script>
        </h:head>

        <h:body id="body">
            <p:growl id="growl" showDetail="true" />

            <p:layout id="layout" fullPage="true">
                <p:layoutUnit id="layoutNorth" position="north">
                    <img src="pictures/home.png" height="75px" width="75px" style="float: left;"/>
                    <h2 style="font-family: sans-serif; float: left;"><b>Room Control System</b></h2>
                </p:layoutUnit>

                <p:layoutUnit id="layoutCenter" position="center">
                    <p:tabView id="indexTabView">
                        <p:tab titleStyleClass="standard" title="Devices">
                            <ui:include src="devices.xhtml" />
                        </p:tab>
                        <p:tab titleStyleClass="standard" title="Tasks &amp; Profiles">
                            <p:accordionPanel id="accPanelProfileTask" activeIndex="-1">
                                <p:tab titleStyle="font-family: sans-serif; font-size: 12px;" title="Create/Edit/Delete Profile">
                                    <ui:include src="profile_task/profile.xhtml" />
                                </p:tab>
                                <p:tab titleStyle="font-family: sans-serif; font-size: 12px;" title="Add tasks to profile">
                                    <ui:include src="profile_task/addTasksToProfile.xhtml" />
                                </p:tab>
                                <p:tab titleStyle="font-family: sans-serif; font-size: 12px;" title="Create/Edit/Delete Task">
                                    <ui:include src="profile_task/task.xhtml" />
                                </p:tab>
                            </p:accordionPanel>
                        </p:tab>
                        <p:tab titleStyleClass="standard" title="Settings">
                            <ui:include src="settings.xhtml" />
                        </p:tab>
                        <p:tab titleStyleClass="standard" title="Log">
                            <ui:include src="logs.xhtml" />
                        </p:tab>
                    </p:tabView>
                </p:layoutUnit>
            </p:layout>
        </h:body>
    </f:view>
</html>